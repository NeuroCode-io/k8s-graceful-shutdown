{
  "name": "k8s-graceful-shutdown",
  "version": "0.0.1",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf dist/*",
    "prepush": "npm run lint",
    "lint": "eslint ./ -c .eslintrc.js --ext ts --cache --max-warnings 0",
    "lint:fix": "eslint ./ -c .eslintrc.js --ext ts  --cache --fix",
    "pretest": "npx tsc",
    "test": "mocha --config test/mocharc.yaml test/**/*.test.ts",
    "test:coverage": "nyc --reporter=lcov --reporter=text npm test"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.json",
      "coverage/",
      "test/",
      "**/index.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/node": "^12.12.7",
    "@typescript-eslint/eslint-plugin": "^2.3.2",
    "@typescript-eslint/parser": "^2.3.2",
    "@types/chai": "^4.2.5",
    "@types/mocha": "^5.2.7",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^1.3.1",
    "prettier": "^1.18.2",
    "typescript": "^3.4.5",
    "mocha": "^6.2.2",
    "chai": "^4.2.0",
    "@types/sinon": "^7.5.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "nyc": "^15.0.0-beta.0",
    "sinon": "^7.5.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "files": [
    "dist/"
  ]
}
